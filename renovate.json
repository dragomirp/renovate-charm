{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  // Can use team:
  "reviewers": ["dragomirp"],
  "enabledManagers": ["poetry", "pip_requirements", "github-actions", "regex"],
  //Schedule once a day
  "schedule": ["* 13 * * *"],
  "packageRules": [
    {
      // Roll python deps in one go
      "matchManagers": ["poetry", "pip_requirements"],
      "groupName": "Python dependencies"
    }, {
      "matchManagers": ["github-actions"],
      "groupName": "Github actions"
    }, {
      // Update juju om release should add a comment to update only the ones we want
      "matchPackageNames": ["juju/juju"],
      "allowedVersions": "<3.0.0",
      "extractVersion": "^juju-(?<version>.*)$",
      "groupName": "Juju release"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^(workflow-templates|\\.github/workflows)/[^/]+\\.ya?ml$"],
      // Need the Latest comment so that we can hold other versions as needed
      "matchStrings": ["bootstrap-options: \"--agent-version (?<currentValue>.*?)\" # Latest"],
      "depNameTemplate": "juju/juju",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "Juju release"
    }
  ],
  // If we want to hold things we can add them here
  "ignoreDeps": []
}
